<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="work.andreaamado.aagameapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <ImageButton
                android:id="@+id/btn_cat_gen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrayLight"
                android:cropToPadding="true"
                android:padding="1px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/btn_cat_general" />

            <ImageButton
                android:id="@+id/btn_cat_adu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrayLight"
                android:cropToPadding="true"
                android:padding="1px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/btn_cat_adult" />

            <ImageButton
                android:id="@+id/btn_cat_sch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrayLight"
                android:cropToPadding="true"
                android:padding="1px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/btn_cat_school" />

            <ImageButton
                android:id="@+id/btn_cat_fam"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrayLight"
                android:cropToPadding="true"
                android:padding="1px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/btn_cat_family" />

            <ImageButton
                android:id="@+id/btn_cat_mix"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrayLight"
                android:cropToPadding="true"
                android:padding="1px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/btn_cat_mix_land" />
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>